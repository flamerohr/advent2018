{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6"],
    "downlevelIteration": true,
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "rootDir": "src",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
 ]
}